@model AccountingWebsite.Models.BalanceViewModel

@{
    ViewData["Title"] = "UpdateBalance";
}

<h1>餘額更改</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBalance" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label">更新後餘額</label>
                <input asp-for="Balance" class="form-control" step="0.01" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="更新餘額" class="btn btn-dark" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </form>
    </div>
</div>